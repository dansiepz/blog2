<%= simple_form_for(@enquiry) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :name, input_html:{class: 'form-control input-block-level'} %>
    </div>
    <div class="form-group">
    <%= f.input :email, input_html:{class: 'form-control input-block-level contact'}  %>

    </div>
    <div class="form-group">
    <%= f.input :message, input_html:{class: 'form-control input-block-level', rows: '10'}  %>
  </div>


    <%= f.submit "Send Message", {class: 'btn btn-success btn-lg'} %>

<% end %>
